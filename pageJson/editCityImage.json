{
    "title": "Edit City Content",
    "jsonPage": "viewCityImage",
    "desciption": "",
    "pageType": "edit",
    "urlFields": ["_id"],
    "fields": [{
            "name": "Select City",
            "type": "selectFromTable",
            "option": "single",
            "tableRef": "city",
            "placeholder": "Enter name",
            "id": "input1",
            "validation": ["required", "trim", "unique"],
            "url": "city/getAll"
        }, {
            "name": "Description",
            "type": "tinymce",
            "tableRef": "description",
            "placeholder": "Enter Description",
            "id": "input5",
            "validation": ["", "trim", ""],
            "url": ""
        },
        {
            "name": "Image",
            "type": "image",
            "tableRef": "image",
            "validation": ["required", "trim", "unique"],
            "url": "",
            "size": "800 x 600px"
        }
    ],
    "action": [{
        "name": "submit",
        "action": "submitRegistrationForm"
    }, {
        "name": "cancel",
        "action": "cancelRegistrationForm",
        "stateName": "page({jsonName:'viewCityImage'})"
    }],
    "apiCall": {
        "url": "viewCityImage/saveRegistration",
        "params": "_id"
    },
    "preApi": {
        "url": "viewCityImage/findOneRegistration",
        "params": "_id"
    }
}